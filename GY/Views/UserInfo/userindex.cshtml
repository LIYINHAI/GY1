 ﻿@model  GY.Models.UserViewMode
@{
    ViewBag.Title = "个人中心";
}
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>userindex</title>
</head>
<body>
    <div class="infocontent">
        <div class="headerimage">
            <div class="userimage"><img src="@Model.user.UserImage" class="img-circle" /></div>
            <div class="sign">@Model.user.Phone</div>
        </div>
        <div class="blank"></div>
        <div class="headernav">
            <ul id="myTab" class="nav nav-tabs">
                <li class="active"><a href="#home" data-toggle="tab"><span class="glyphicon glyphicon-home"></span> 主页</a></li>
                <li><a href="#info" data-toggle="tab"><span class="glyphicon glyphicon-list-alt"></span> 资料</a></li>
                <li><a href="#collection" data-toggle="tab"><span class="glyphicon glyphicon-shopping-cart"></span> 订单</a></li>
                <li><a href="#order" data-toggle="tab"><span class="glyphicon glyphicon-star"></span> 收藏</a></li>
            </ul>
        </div>
        <div id="myTabContent" class="tab-content">
            <div class="tab-pane fade in active" id="home">
                @foreach (var item in Model.viewcomment)
                {
                    <div class="blank"></div>
                    <div class="solid"></div><br />
                    <div>
                        <div>
                            <div id="userimage"><img src="~/images/Userphoto/U1.jpg" class="img-circle" /></div>
                            <div id="username">@item</div>
                            <div id="publishtime">@item.ComTime</div>
                        </div>
                        <div id="text">&nbsp;&nbsp;&nbsp;&nbsp;@item.ComContent</div> <br />
                        <input type="submit" value="确认删除" class="btn delete" />
                    </div>
                }
            </div>
            <div class="tab-pane fade" id="info">
                <div class="blank"></div>
                <div class="personal">
                    <div class="personal_h">个人资料</div><br /><br />
                    @using (Html.BeginForm("EditInfo", "UserInfo", FormMethod.Post, new { @class = "ZiliaoSend", enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-horizontal">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group ua">
                                @Html.LabelFor(model => model.user.UserName, "用户名", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.user.UserName, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.user.UserName, "", new { @class = "text-danger" })
                                </div>
                            </div><br />
                            <div class="form-group ua">
                                @Html.LabelFor(model => model.user.UserImage, "头像", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    <input type="file" name="User_image" value="User_image" class="file_a_a" />
                                </div>
                            </div><br />
                            <div class="form-group ua">
                                @Html.LabelFor(model => model.user.Phone, "手机", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.user.Phone, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.user.Phone, "", new { @class = "text-danger" })
                                </div>
                            </div><br />
                            <div class="form-group ua">
                                @Html.LabelFor(model => model.user.Email, "邮箱", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.user.Email, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.user.Email, "", new { @class = "text-danger" })
                                </div>
                            </div><br />
                            <div class="form-group">
                                <div class="col-md-offset-1 col-md-11">
                                    <input type="submit" value="保存" class="btn btn-default save" />
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="blank"></div>
    @section scripts {
        <script src="~/Scripts/usercenter.js"></script>
    }


</body>
</html>
